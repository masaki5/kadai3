<div class='body'>
      <div class='container'>

        <p id="notice"></p>
          <% if @book.errors.any? %>
          <div id="error_explanation">
          <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
          </div>
          <% end %>

      	<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, class: "col-xs-12" %>

<h4>Opinion</h4>
<%= f.text_field :body, class: "col-xs-12" %>

<div>
  <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %></div>
<% end %>
    <a><%=link_to "Show", book_path %></a> |
		<a class="back" href="/books">Back</a>
    </div>
    <div class='col-md-3'></div>
</div>
      </div>
    </div>