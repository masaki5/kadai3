<div class='body'>
 <div class='container'>
  <p id="notice"></p>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class='row'>

<%= render 'users/tenp', user: @user, book: @book %>

<div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @books.each do |book| %>

  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 45, 45 %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>
</div>
</div>
</div>
